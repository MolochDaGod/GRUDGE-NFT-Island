{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "installCommand": "npm install && cd client && npm install",
  "buildCommand": "npm run build --prefix client",
  "routes": [
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
